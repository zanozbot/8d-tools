{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "ES2022",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2022"
  },
  "include": ["./src/**/*"],
  "exclude": ["./test/**/*", "./dist/**/*", "./node_modules/**/*"]
}
