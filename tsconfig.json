{
  "compilerOptions": {
    "allowArbitraryExtensions": true,
    "declaration": true,
    "declarationMap": true,
    "lib": ["es2023"],
    "module": "NodeNext",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "rewriteRelativeImportExtensions": true,
    "target": "es2022"
  },
  // These may be different for your repo:
  "include": ["./src", "./test"],
  "exclude": ["**/*/*.test.*", "**/*.fixture.*"]
}
